<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.terradue</groupId>
    <artifactId>oss-java-parent</artifactId>
    <version>3</version>
  </parent>

  <artifactId>dsi-tools</artifactId>
  <version>0.1-SNAPSHOT</version>

  <name>DSITools</name>
  <description>A set of Command Line Tools to interact with Zimory/T-Systems cloud REST server</description>
  <url>http://terradue.github.com/dsi-tools</url>

  <scm>
    <connection>scm:git:ssh://github.com/Terradue/dsi-tools.git</connection>
    <developerConnection>scm:git:git+ssh://git@github.com/Terradue/dsi-tools.git</developerConnection>
    <url>https://github.com/Terradue/dsi-tools</url>
  </scm>
  <distributionManagement>
    <site>
      <id>github</id>
      <url>gitsite:git@github.com/Terradue/dsi-tools.git</url>
    </site>
  </distributionManagement>

  <properties>
    <javac.src.version>1.6</javac.src.version>
    <javac.target.version>1.6</javac.target.version>
  </properties>

  <dependencies>
    <!--
     | logging stuff
    -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.6.4</version>
    </dependency>

    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>1.0.6</version>
    </dependency>

    <!--
     | CLI parser
    -->
    <dependency>
      <groupId>com.beust</groupId>
      <artifactId>jcommander</artifactId>
      <version>1.29</version>
    </dependency>

    <!--
     | Dependency Injection
    -->
    <dependency>
      <groupId>com.google.inject</groupId>
      <artifactId>guice</artifactId>
      <version>3.0</version>
    </dependency>

    <dependency>
      <groupId>org.99soft.guice</groupId>
      <artifactId>rocoto</artifactId>
      <version>6.1</version>
    </dependency>

    <!--
     | SSL stuff
    -->
    <dependency>
      <groupId>ca.juliusdavies</groupId>
      <artifactId>not-yet-commons-ssl</artifactId>
      <version>0.3.11</version>
    </dependency>

    <!--
     | net layer
    -->
    <dependency>
      <groupId>com.sun.jersey</groupId>
      <artifactId>jersey-client</artifactId>
      <version>1.13-b01</version>
    </dependency>

    <dependency>
      <groupId>org.sonatype.spice</groupId>
      <artifactId>jersey-ahc-client</artifactId>
      <version>1.0.2</version>
    </dependency>

    <dependency>
      <groupId>com.ning</groupId>
      <artifactId>async-http-client</artifactId>
      <version>1.7.4</version>
      <exclusions>
        <exclusion>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-api</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>commons-net</groupId>
      <artifactId>commons-net</artifactId>
      <version>3.1</version>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <filtering>false</filtering>
      </resource>
    </resources>

    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>appassembler-maven-plugin</artifactId>
        <version>1.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>assemble</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <repositoryLayout>flat</repositoryLayout>
          <repositoryName>lib</repositoryName>
          <extraJvmArguments>-Dproject.name=${project.name} -Dproject.version=${project.version} -Xms500m -Xmx500m -XX:PermSize=128m -XX:-UseGCOverheadLimit</extraJvmArguments>
          <programs>
            <program>
              <mainClass>com.terradue.dsi.UploadImage</mainClass>
              <name>dsi-upload-image</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.DescribeClouds</mainClass>
              <name>dsi-describe-clouds</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.DescribeImages</mainClass>
              <name>dsi-describe-images</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.DescribeInstances</mainClass>
              <name>dsi-describe-instances</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.Authorize</mainClass>
              <name>dsi-authorize</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.RebootInstances</mainClass>
              <name>dsi-reboot-instances</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.RegisterImage</mainClass>
              <name>dsi-register-image</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.StopInstances</mainClass>
              <name>dsi-stop-instances</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.StartInstances</mainClass>
              <name>dsi-start-instances</name>
            </program>
            <program>
              <mainClass>com.terradue.dsi.CreateTags</mainClass>
              <name>dsi-create-tags</name>
            </program>
          </programs>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2.1</version>
        <executions>
          <execution>
            <id>assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <attach>true</attach>
          <tarLongFileMode>gnu</tarLongFileMode>
          <appendAssemblyId>true</appendAssemblyId>
          <descriptors>
            <descriptor>${basedir}/src/main/assembly/bin.xml</descriptor>
            <descriptor>${basedir}/src/main/assembly/src.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
